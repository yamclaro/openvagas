<%= simple_form_for @company do |f| %>
  <%= f.input :name %>
  <%= f.input :url %>
  <% if @company.new_record? || @company.logo.nil? %>
  <%= f.input :logo %>
  <% else %>
    <%= image_tag(@company.logo, class: "logo-company") %>
  <% end %>
  <br>
  <br>
  <%= f.button :submit, class:"btn btn-primary" %>
<% end %>