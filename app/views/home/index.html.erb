<h1>Lista de Vagas</h1>

<div class="row">
  <% @positions.each do |position| %>
    <div class="col-md-12"> <!-- TrÃªs cards por linha -->
      <div class="card mb-12">
        <div class="card-body">
          <h5 class="card-title"><%= position.name %></h5>
          <div class="d-flex justify-content-between">
          <p class="card-text"><%= position.company.name %></p> <!-- Altere conforme necessÃ¡rio -->
          <p class="card-text"><%= position.career.name %></p> 
